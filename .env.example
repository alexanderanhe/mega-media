MONGODB_URI=mongodb://localhost:27017/mega_media_grid
JWT_SECRET=replace-with-a-long-random-secret
JWT_EXPIRES_IN=15m

# Cloudflare R2 endpoint format:
# https://<ACCOUNT_ID>.r2.cloudflarestorage.com
R2_ENDPOINT=https://1234567890abcdef1234567890abcdef.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET=mega-media-grid
R2_REGION=auto
# Optional public base URL (if bucket is public):
# https://pub-<hash>.r2.dev
R2_PUBLIC_BASE_URL=

FFMPEG_PATH=/opt/homebrew/bin/ffmpeg
NODE_ENV=development

# Optional bootstrap for first ADMIN (created if no admin exists)
BOOTSTRAP_ADMIN_EMAIL=admin@example.com
BOOTSTRAP_ADMIN_PASSWORD=ChangeMe_123456
